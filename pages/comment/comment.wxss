/* pages/comment/comment.wxss */
.list{
    width:100%;
    box-sizing: border-box;
    padding:30rpx;
    box-shadow: 1px 1px 5px #ccc;
    background:white;
    margin-top:30rpx;
}
.list .box{
    width:100%;
    height:150rpx;
}
.list .author{
    float:left;
    text-align: left;
    margin-left:50rpx;
    font-size:50rpx;
    line-height: 100rpx;

}
.list image{
    width:100rpx;
    height:100rpx;
    float:left;
    border-radius: 50%;
}
.list .content{
    width:100%;
    text-align: left;
    line-height: 60rpx;
    text-indent: 2em;
}